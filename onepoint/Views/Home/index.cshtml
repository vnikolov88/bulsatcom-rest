@model onepoint.Models.Home.HomeModel

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- jumbo -->
<div class="jumbotron">
    <div class="container">
        <h1 class="display-3">Welcome to Bulsat API</h1>
        <p class="lead">WATCH BULSATCOM IPTV ANYWHERE</p>
        <a class="btn btn-primary" href="register">Get API KEY</a>
    </div>
</div>

<!-- info -->
<div class="container my-5">
    <div class="row">
        <div class="col-md-4">
            <p class="text-center"><i class="fas fa-3x fa-key"></i></p>
            <h4 class="text-center">Authenticate</h4>
            <p class="text-center">
                Watch on multiple devices at the same time.
            </p>
        </div>
        <div class="col-md-4">
            <p class="text-center"><i class="fas fa-3x fa-sync"></i></p>
            <h4 class="text-center">Sync</h4>
            <p class="text-center">
                Always up to date 24/7 channels and EPG live stream.
            </p>
        </div>
        <div class="col-md-4">
            <p class="text-center"><i class="fas fa-3x fa-tv"></i></p>
            <h4 class="text-center">Watch</h4>
            <p class="text-center">
                Watch anywhere, use your favorite device and software.
            </p>
        </div>
    </div>
</div>

<!-- carousel -->
@if (Model.channels_now_next.Count > 0)
{
    <div id="carouselProgramm" class="carousel slide" data-ride="carousel" style="height: 400px;">
        <div class="carousel-inner">
            @for (int i=0; i<Model.channels_now_next.Count; i++)
            {
                <div class="carousel-item @(i==0 ? "active" : "")">
                    <div style="height: 400px; overflow: hidden;">
                        <img class="d-block w-100" src="~/images/poster/the_big_bang_theory.jpg" style="max-height: initial;">
                    </div>
                    <div class="carousel-caption d-none d-sm-block" style="background-color: rgba(0, 0, 0, 0.5);">
                        <h1>@Model.channels_now_next[i].channel</h1>
                        <div class="px-5">
                            <table class="table table-hover">
                                <tbody>
                                    <tr>
                                        <th>NOW</th>
                                        <td>@Model.channels_now_next[i].startNow - @Model.channels_now_next[i].stopNow</td>
                                        <td>@Model.channels_now_next[i].titleNow</td>
                                        <td>@Model.channels_now_next[i].descNow</td>
                                    </tr>
                                    <tr>
                                        <th>NEXT</th>
                                        <td>@Model.channels_now_next[i].startNext - @Model.channels_now_next[i].stopNext</td>
                                        <td>@Model.channels_now_next[i].titleNext</td>
                                        <td>@Model.channels_now_next[i].descNext</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class=" px-5">
                            <div class="progress" style="height: 5px;">
                                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"
                                     aria-valuenow="@Model.channels_now_next[i].progress()" aria-valuemin="0" aria-valuemax="100" style="width: @Model.channels_now_next[i].progress()%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselProgramm" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselProgramm" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}

<!-- live data -->
<div class="container my-5">
    <div class="row">
        <div class="col-md-4">
            <p class="text-center"><i class="fas fa-3x fa-play"></i></p>
            <h4 class="text-center">Channels <span class="badge badge-pill badge-danger">@Model.channels.Count</span></h4>
            <div style="height: 200px !important; overflow: auto;">
                <table class="table table-striped table-hover table-sm">
                    <tbody>
                        @foreach (string c in Model.channels)
                        {
                            <tr><td>@c</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-4">
            <p class="text-center"><i class="fas fa-3x fa-music"></i></p>
            <h4 class="text-center">Radio <span class="badge badge-pill badge-danger">@Model.radios.Count</span></h4>
            <div style="height: 200px !important; overflow: auto;">
                <table class="table table-striped table-hover table-sm">
                    <tbody>
                        @foreach (string r in Model.radios)
                        {
                            <tr><td>@r</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-4">
            <p class="text-center"><i class="fa fa-3x fa-calendar"></i></p>
            <h4 class="text-center">EPG <span class="badge badge-pill badge-danger">@Model.channels_epg.Count</span></h4>
            <div style="height: 200px !important; overflow: auto;">
                <table class="table table-striped table-hover table-sm">
                    <tbody>
                        @foreach (string ce in Model.channels_epg)
                        {
                            <tr><td>@ce</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Registration -->
<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <p class="text-center lead mb-5">3 EASY STEPS</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <h1 class="text-center"><span class="badge badge-primary">1</span></h1>
                <h4 class="text-center">Get API KEY</h4>
                <p class="text-center">Bulsat API need to split all connections to Bulsatcom platform.</p>
                <div class="text-center"><a class="btn btn-outline-primary" href="register">Get API KEY</a></div>
            </div>
            <div class="col-md-4">
                <h1 class="text-center"><span class="badge badge-primary">2</span></h1>
                <h4 class="text-center">Add Bulsatcom credential</h4>
                <p class="text-center">Bulsat API will authenticate instead of you and create private permanent connection to Bulsatcom.</p>
            </div>
            <div class="col-md-4">
                <h1 class="text-center"><span class="badge badge-primary">3</span></h1>
                <h4 class="text-center">Set IPTV client</h4>
                <p class="text-center">Bulsat API will generate private URLs (m3u, epg, logos). You can use this URLs on any device whit IPTV client installed.</p>
            </div>
        </div>
    </div>
</div>