@model onepoint.Models.Home.RegisterModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <!-- row -->
    <div class="row">

        <!-- col -->
        <div class="col-sm-4">
            <div class="card text-white bg-success mb-3 my-5">
                <div class="card-header">Settings</div>
                <div class="card-body">
                    <p><strong>@Html.LabelFor(m => m.key)</strong></p>
                    <p>@Model.key</p>
                    <hr />
                    @using (Html.BeginForm("Register", "Home", FormMethod.Post))
                    {
                        @Html.HiddenFor(m => m.key)
                        <div class="form-group">
                            @Html.LabelFor(m => m.name)
                            @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.nameConfirm)
                            @Html.TextBoxFor(m => m.nameConfirm, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.nameConfirm, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.password)
                            @Html.TextBoxFor(m => m.password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.passwordConfirm)
                            @Html.TextBoxFor(m => m.passwordConfirm, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.passwordConfirm, "", new { @class = "text-danger" })
                        </div>
                        
                        <br />

                        <button style="width:100%" type="submit" class="btn btn-primary">
                            <i class="fa fa-floppy-o"></i> Update
                        </button>
                    }
                </div>
            </div>
        </div>

        <!-- col -->
        <div class="col-sm-8">
            <div class="card bg-light mb-3 my-5">
                <div class="card-header">URLs</div>
                <div class="card-body">
                    <p><strong>m3u</strong></p>
                    <p>x_3hVnNwXgPDqu3vNwbWa5-sMpMKY5pRwwUDgOAqS1k=</p>
                    <hr />
                    <p><strong>epg</strong></p>
                    <p>x_3hVnNwXgPDqu3vNwbWa5-sMpMKY5pRwwUDgOAqS1k=</p>
                    <hr />
                    <p><strong>logos</strong></p>
                    <p>x_3hVnNwXgPDqu3vNwbWa5-sMpMKY5pRwwUDgOAqS1k=</p>
                </div>
            </div>
        </div>

    </div>

    <!-- row -->
    <div class="row">

        <!-- col -->
        <div class="col-sm-12">
            <div class="alert alert-info my-5" role="alert">
                <p><i class="fa fa-info"></i> <strong>Note!</strong></p>
                <p>We'll never share your Bulsat User or Password with anyone else.</p>
            </div>
        </div>

    </div>

</div>